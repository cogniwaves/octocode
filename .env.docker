# Docker Environment Configuration for OctoCode

# Node Environment
NODE_ENV=development

# Database Configuration (PostgreSQL for Docker)
DATABASE_URL=postgresql://octodev:octodev_password@oc_database:5432/octocode_dev?schema=public
POSTGRES_HOST=oc_database
POSTGRES_PORT=5432
POSTGRES_DB=octocode_dev
POSTGRES_USER=octodev
POSTGRES_PASSWORD=octodev_password

# NextAuth.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=development-secret-key-change-in-production

# Anthropic AI Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Socket.io Configuration
SOCKET_IO_PORT=3001

# Redis Configuration (for future use)
REDIS_HOST=oc_redis
REDIS_PORT=6379
REDIS_URL=redis://oc_redis:6379

# Application Configuration
APP_HOST=0.0.0.0
APP_PORT=3000

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=json

# Security Configuration
CORS_ORIGIN=http://localhost:3000
TRUSTED_PROXIES=127.0.0.1,::1

# Performance Configuration
MAX_FILE_SIZE=50mb
REQUEST_TIMEOUT=30000

# Development Configuration
HOT_RELOAD=true
WATCH_POLL=true